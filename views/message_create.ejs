<!DOCTYPE html>
<html>
  <head>
    <%- include('./head_config') %>
  </head>
  <body>
    <%- include('./header') %>
    <div class="row">

      <div class="col s3">
        <%- include('./sidebar') %>
      </div>
      <div class="col s9">
        <div class="card blue-grey darken-1">
          <form action='/message/create' method="post">
            <div class="card-content white-text">
              <span class="card-title">Enter text</span>
              <div class="input-field">
                <div class="input-field col s12">
                  <textarea id="textarea1" class="materialize-textarea" name='text'></textarea>
                  <label for="textarea1">Textarea</label>
                </div>
              </div>
            </div>
            <div class="card-action">
              <button class="btn waves-effect waves-light orange accent-2" type="submit" name="action" value="message create">Submit
                <i class="material-icons right">send</i>
              </button>
            </div>
          </form>
        </div>
      </div>
  </body>
</html>
