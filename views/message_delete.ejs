<!DOCTYPE html>
<html>
  <head>
    <%- include('./head_config') %>
  </head>
  <body>
    <%- include('./header') %>
    <div class="row">

      <div class="col s3">
        <%- include('./sidebar') %>
      </div>

      <div class="col s9">
        <% if(data) { %>
          <div class="card blue-grey darken-1">
            <form action='/message/create' method="post">
              <div class="card-content white-text">
                <span class="card-title"><%= data._id %></span>
                <p><%= data.text %></p>
              </div>
              <form action='/message/delete/<%= data._id %>' method="POST">
                <div class="card-action">
                  <button class="btn waves-effect waves-light orange accent-2" type="submit" name="action" value="message create">Submit
                    <i class="material-icons right">send</i>
                  </button>
                </div>
              </form>
            </form>
          </div>
        <% } else { %>
          <p>Message is null</p>
        <% } %> 
      </div>
    </div>
    <%- include('./footer') %>
    <%- include('./body_config') %>
  </body>
</html>
